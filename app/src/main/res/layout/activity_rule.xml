<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bg_home"
    android:orientation="vertical"
    tools:context="com.quangda280296.ailatrieuphu.activity.RuleActivity">

    <LinearLayout
        android:id="@+id/rule"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp">

            <ImageView
                android:id="@+id/img_50"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@mipmap/ic_50"
                android:visibility="visible" />

            <ImageView
                android:id="@+id/img_call"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginLeft="60dp"
                android:src="@mipmap/ic_call"
                android:visibility="visible" />

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:src="@mipmap/img_app" />

            <ImageView
                android:id="@+id/img_audience"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="end"
                android:layout_marginRight="60dp"
                android:src="@mipmap/ic_audience_help"
                android:visibility="visible" />

            <ImageView
                android:id="@+id/img_switch"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="end"
                android:src="@mipmap/ic_switch_question"
                android:visibility="visible" />

        </FrameLayout>

        <ImageView
            android:id="@+id/img_board"
            android:layout_width="match_parent"
            android:layout_height="480dp"
            android:layout_gravity="center_horizontal"
            android:src="@mipmap/img_board"
            android:visibility="visible" />

    </LinearLayout>

    <FrameLayout
        android:id="@+id/ready"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="210dp"
            android:layout_gravity="center">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginHorizontal="20dp"
                android:background="@mipmap/fg_frame">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="15dp"
                    android:alpha="0.7"
                    android:background="@android:color/black" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Bạn đã sẵn sàng chơi ?"
                    android:textAllCaps="true"
                    android:textColor="@android:color/white"
                    android:textSize="20sp"
                    android:textStyle="bold" />

            </FrameLayout>

            <ImageView
                android:id="@+id/img_yes"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="bottom"
                android:layout_marginLeft="80dp"
                android:src="@mipmap/ic_yes" />

            <ImageView
                android:id="@+id/img_no"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="bottom|end"
                android:layout_marginRight="80dp"
                android:src="@mipmap/ic_no" />

        </FrameLayout>

        <include layout="@layout/layout_adview" />

    </FrameLayout>

</LinearLayout>
